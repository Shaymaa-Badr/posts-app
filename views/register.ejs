<%-include('shared/header.ejs') %>
    <div id="signUp" class="vh-100">
        <div class="overlay">
            <!-- ======================Registration form================================= -->
            <div class="container pt-5">
                <% if (exists.length !=0) { %>
                    <div class="alert alert-danger text-center">Email is already exists</div>
                    <% } %>
                        <div class="row">
                            <div class="col-md-7 m-auto p-5">
                                <div class="form p-5 ">
                                    <h2 class="text-center text-white">Registration</h2>
                                    <form action="handleSignUp" method="POST">
                                        <div class="row mt-3">
                                            <div class="col">
                                                <input value="<%= oldInputs?oldInputs.f_name:''%>" name="f_name"
                                                    type="text" class="form-control inp pt-3" placeholder="First Name">
                                                <% if (errors.find(e=>e.param === 'f_name')) { %>
                                                    <div class="alert alert-danger">Inavlid Input</div>
                                                    <% } %>
                                            </div>
                                            <div class="col">
                                                <input value="<%= oldInputs?oldInputs.l_name:''%>" name="l_name"
                                                    type="text" class="form-control inp pt-3" placeholder="Last Name">
                                                <% if (errors.find(e=>e.param === 'l_name')) { %>
                                                    <div class="alert alert-danger">Inavlid Input</div>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <input value="<%= oldInputs?oldInputs.user_name:''%>" name="user_name"
                                            type="text" class="form-control inp pt-3" placeholder="Username">
                                        <% if (errors.find(e=>e.param === 'user_name')) { %>
                                            <div class="alert alert-danger">Inavlid Input</div>
                                            <% } %>

                                                <input value="<%= oldInputs?oldInputs.email:''%>" name="email"
                                                    type="email" class="form-control inp pt-3" placeholder="Email">
                                                <% if (errors.find(e=>e.param === 'email')) { %>
                                                    <div class="alert alert-danger">Inavlid Input</div>
                                                    <% } %>


                                                        <input value="<%= oldInputs?oldInputs.password:''%>"
                                                            name="password" type="password"
                                                            class="form-control inp pt-3 mb-3" placeholder="Password">
                                                        <% if (errors.find(e=>e.param === 'password')) { %>
                                                            <div class="alert alert-danger">Inavlid Input</div>
                                                            <% } %>

                                                                <button type="submit "
                                                                    class="btn btn-outline-info text-white w-100">Sign
                                                                    Up</button>
                                                                <p class="text-center pb-3">
                                                                    <a href="/login"
                                                                        class="text-white mt-3 d-block">SignIn Here</a>
                                                                </p>
                                    </form>
                                </div>
                            </div>
                        </div>
            </div>
        </div>
    </div>


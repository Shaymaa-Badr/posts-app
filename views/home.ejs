<%- include('shared/header.ejs') %>
    <div id="home">
        <!-- ===================================navbar===================================== -->
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="#">Linked Posts</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav m-auto">

                        <li class="nav-item">
                            <a class="nav-link" href="/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">My Profile</a>
                        </li>
                    </ul>

                </div>
                <div class="mr-5">
                    <ul class="navbar-nav m-auto ">
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                <img width="40" src="/images/man.jpg" alt="">
                               <%= userName %> 
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/accountSetting">Account Setting</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/logOut">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- ===================================/navbar===================================== -->



        <div class="container">
            <div class="row">
                <div class="col-md-6 m-auto">
                    <div class="post-topbar card m-5">
                        <a class="btn btn-info btn-custom" data-toggle="modal" data-target="#exampleModal" href="">New
                            Post</a>
                    </div>
                </div>
            </div>
        </div>
        <!------------------------------------------------- Modals ------------------------------------------------->
        
        <!------------------- Add post Modal ----------------->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form action="/addPost" method="POST">
                <div class="modal-dialog">

                    <div class="modal-content">
                        <div class="modal-header text-center text-white">
                            <h5 class="modal-title " id="exampleModalLabel">Post a text</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span class="text-white" aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <input class="form-control my-3" placeholder="Enter Title" type="text" name="title">
                            <textarea class="form-control" placeholder="Enter Text" id="" cols="30" rows="10"
                                name="desc"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-info">Post</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- ==============================posts========================================  -->
        <div class="container">
            <div class="row">
                <% posts.forEach(element=> { %>
                    <div class="col-md-7  card p-4 auto">
                        <div class="post">
                            <div class="media">
                                <img src="/images/man.jpg" width="60" class="mr-3" alt="...">
                                <div class="media-body">
                                    <h5 class="mt-0">
                                        <%= element.userID.f_name %>
                                            <%= element.userID.l_name %>
                                    </h5>
                                    <%=element.createdAt%>
                                </div>
                            </div>
                            <hr>
                            <h3 id='postTitle<%= element._id%>'>
                                <%= element.title%>
                            </h3>
                            <p id="desc<%= element._id%>" class="pt-4">
                                <%= element.desc%>
                            </p>  
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
    <!-- ==============================/posts========================================  -->

    <%- include('shared/footer.ejs') %>

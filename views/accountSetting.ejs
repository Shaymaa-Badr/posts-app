    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-md-8 m-auto card p-5">
                <div class="">
                    <h3>Account Setting</h3>
                    <hr>
                    <form action="/changePassword" method="POST">
                        
                        <input name="oldPassword" placeholder="Enter Old Password" type="text" class="form-control my-2">
                        <% if (incorrect.length!=0) { %>
                            <div class="alert alert-danger text-center">
                                Incorrect Password
                            </div>
                            <% } %>
                        <input name="newPassword" placeholder="New Password" type="text" class="form-control my-2">
                        <% if (errors.find(e=>e.param === 'newPassword')) { %>
                            <div class="alert alert-danger">Inavlid Input</div>
                            <% } %>
                            <input name="confPassword" placeholder="Repeat Password" type="text" class="form-control my-2">
                            <% if (errors.find(e =>e.param === 'confPassword')) { %>
                                <div class="alert alert-danger">Inavlid Input</div>
                                <% } %>     
                        <button type="submit" class="btn btn-info mt-3">Save Setting</button>
                    </form>
                </div>
            </div>
        </div>
    </div>






</div>